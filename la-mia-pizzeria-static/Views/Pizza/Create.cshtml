@model Pizza


@{
    ViewData["Title"] = "Crea Pizza";
}

<h1 class="text-center">Crea una nuova Pizza</h1>

<form asp-controller="Pizza" asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name">Nome pizza:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Descrizione:</label>
        <textarea asp-for="Description" class="form-control" rows="3" ></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Prezzo:</label>
        <input asp-for="Price" class="form-control" step="0.01" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath">Immagine:</label>
        <input asp-for="ImagePath" type="file" class="form-control-file" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salva</button>
</form>
